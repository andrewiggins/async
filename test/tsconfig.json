{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext"
    ],
    "outDir": "output",
    "sourceMap": false,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "incremental": true,
    "esModuleInterop": true,
  },
  "include": [
    "*.ts",
    "../*.ts",
    "**/*.ts"
  ]
}
